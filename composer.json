{
	"name": "web-tp3/tp3-businessview",
	"type": "typo3-cms-extension",
	"version": "1.5.0",
	"description" : "google businessview für tp3 - 360° Panorama Designer für Ihren virtuellen Rundgang",
	"license": "GPL-2.0-or-later",
	"homepage": "https://web.tp3.de/manual/tp3-businessview.html",
	"require": {
		"php": ">=7.0 <8.5",
         "typo3/cms-core": "  ^11.5 || ^12.4 || ^13"
	},
	"autoload": {
		"psr-4": {
			"Tp3\\Tp3Businessview\\": "Classes"
		}
	},
	"require-dev": {
		"codeception/codeception": "^5.2",
		"codeception/module-asserts": "^3.0",
		"codeception/module-phpbrowser": "*",
		"codeception/module-webdriver": "^4.0",
		"dbrekelmans/bdi": "^1.4",
		"deployer/deployer": "^7.4",
		"deployer/recipes": "*",
		"friendsofphp/php-cs-fixer": "*",
		"php-webdriver/webdriver": "^1.15",
		"phpmd/phpmd": "*",
		"phpstan/phpstan": "*",
		"se/selenium-server-standalone": "*",
		"typo3-console/composer-auto-commands": "*",
		"typo3/cms-styleguide": "*",
		"typo3/testing-framework": "*",
		"web-tp3/chromedriver": "*"
	},
	"suggest": {
		"web-tp3/tp3_openhours": "*"
	},
	"autoload-dev": {
		"psr-4": {
			"Tp3\\Tp3Businessview\\Tests\\": "Tests"
		}
	},
	"replace": {
		"typo3-ter/tp3_businessview": "self.version",
		"web-tp3/tp3businessview": "self.version"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "tp3_businessview",
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		}
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin",
		"allow-plugins": {
			"typo3/cms-composer-installers": true,
			"typo3/class-alias-loader": true
		}
	},
	"scripts": {

		"post-autoload-dump": [
			"@typo3-cms-scripts"
		],
		"test:php:unit": [
			"@php -v",
			"@php bin/phpunit -c Tests/Build/UnitTests.xml"
		],
		"test:php:func": [
			"@php -v",
			"@php bin/phpunit -c Tests/Build/FunctionalTests.xml"
		]

	}

}
